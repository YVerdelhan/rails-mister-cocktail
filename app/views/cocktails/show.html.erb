<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose|%>
  <p>dose par ingredient: <%= dose.ingredient.name%> - <%=dose.description%> </p>
  <%= link_to 'Delete dose', dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
<% end %>

<%= link_to 'New dose', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Back', cocktails_path %>
